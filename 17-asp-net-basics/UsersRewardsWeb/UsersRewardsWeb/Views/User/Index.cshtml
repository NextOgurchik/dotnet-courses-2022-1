@using Entities
@model IList<User>

@{
    ViewData["Title"] = "Index";
}

<h1>Пользователи</h1>
<table>
    <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Дата рождения</th>
        <th>Возраст</th>
        <th>Награды</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Birthdate.ToShortDateString()</td>
            <td>@user.Age</td>
            <td>@user.Rewards</td>
            <td><a asp-controller="User" asp-action="Update" asp-route-id="@user.Id">Изменить</a></td>
            <td>
                <form asp-controller="User" asp-action="Remove">
                    <input type="hidden" value="@user.Id" name="id" />
                    <button type="submit">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
<br />
<a asp-controller="User" asp-action="Add">Добавить пользователя</a>